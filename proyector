<body>

    <div id="projector-frame">
        <!-- Decoraci칩n Esquinas -->
        <div class="corner-decor tl"></div>
        <div class="corner-decor tr"></div>
        <div class="corner-decor bl"></div>
        <div class="corner-decor br"></div>

        <!-- Cabecera -->
        <div class="header">
            <h1 class="title">Nuestra Boda</h1>
            <div class="subtitle">Momentos en Vivo</div>
        </div>

        <!-- 츼rea de Foto -->
        <div id="photo-wrapper">
            <div id="loading-overlay">
                <div class="spinner"></div>
                <p id="status-text" class="text-[#C19A6B] font-serif text-xl tracking-widest">Conectando...</p>
            </div>
            <img id="current-photo" src="" alt="Momento capturado">
        </div>

        <!-- Pie de Foto -->
        <div class="caption-bar">
            <div id="author-text"></div>
            <div id="message-text"></div>
        </div>
    </div>

    <script type="module">
        // Importaciones de Firebase
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, onSnapshot, setDoc, arrayUnion, Timestamp, getDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // ==========================================
        // 丘뙖잺 CONFIGURACI칍N
        // ==========================================
        // 1. CONFIGURACI칍N DE FIREBASE (춰PEGA TUS DATOS AQU칈!)
        const firebaseConfig = {
            apiKey: "TU_API_KEY",
            authDomain: "TU_PROYECTO.firebaseapp.com",
            projectId: "TU_PROJECT_ID",
            storageBucket: "TU_PROYECTO.firebasestorage.app",
            messagingSenderId: "...",
            appId: "..."
        };

        const appId = 'album-boda-fotos'; 
        // URL DE APPS SCRIPT (Para referencia y logs)
        const APPS_SCRIPT_URL = "https://script.google.com/macros/s/AKfycbxogTHpV9J3tTxCb8MSnHPtA2UxgwaDXD6ysfx8jUrs7mJefergNiuZ1Hf6nofbX6U/exec";
        
        const SLIDESHOW_INTERVAL = 5000; // 5 segundos por foto
        // ==========================================

        // Inicializaci칩n
        let app, db, auth;
        const statusText = document.getElementById('status-text');
        const loadingOverlay = document.getElementById('loading-overlay');

        try {
            const configToUse = (firebaseConfig.apiKey !== "TU_API_KEY") ? firebaseConfig : (typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : null);
            if (!configToUse) throw new Error("Falta configuraci칩n");
            
            app = initializeApp(configToUse);
            db = getFirestore(app);
            auth = getAuth(app);
        } catch (e) {
            console.error(e);
            statusText.textContent = "Falta configuraci칩n de Firebase.";
            statusText.classList.add('text-red-500');
            throw e;
        }

        // Elementos DOM
        const imgEl = document.getElementById('current-photo');
        const authorEl = document.getElementById('author-text');
        const messageEl = document.getElementById('message-text');

        // Estado
        let photos = [];
        let currentIndex = 0;
        let slideTimer = null;

        // --- L칍GICA DE VISUALIZACI칍N ---

        function startSlideshow() {
            if (slideTimer) clearInterval(slideTimer);
            if (photos.length > 0) {
                // Mostrar inmediatamente si no hay nada visible
                if(imgEl.style.opacity === '0' || imgEl.src === '') displayCurrentPhoto();

                slideTimer = setInterval(() => {
                    currentIndex = (currentIndex + 1) % photos.length;
                    displayCurrentPhoto();
                }, SLIDESHOW_INTERVAL);
            }
        }

        function displayCurrentPhoto() {
            if (photos.length === 0) return;
            const photo = photos[currentIndex];
            
            // Fade Out
            imgEl.style.opacity = 0;
            imgEl.classList.remove('ken-burns');

            setTimeout(() => {
                imgEl.src = photo.url;
                
                // Textos
                const user = photo.userId && photo.userId !== 'AppsScript-User' && photo.userId !== 'Invitado' ? photo.userId : '';
                authorEl.textContent = user ? `游닞 ${user}` : '';
                // Como Apps Script no guarda dedicatoria en Firestore en esta versi칩n simple, lo dejamos vac칤o o gen칠rico
                messageEl.textContent = ""; 

                // Fade In
                imgEl.onload = () => {
                    loadingOverlay.classList.add('hidden');
                    imgEl.style.opacity = 1;
                    imgEl.classList.add('ken-burns');
                };
            }, 800); 
        }

        function updateUI(newPhotos) {
            // Ordenar: Nuevas primero
            const sorted = newPhotos.sort((a, b) => (a.timestamp?.toMillis() || 0) - (b.timestamp?.toMillis() || 0));
            
            const isFirstLoad = photos.length === 0 && sorted.length > 0;
            const hasNewPhotos = sorted.length > photos.length;

            photos = sorted;

            if (photos.length === 0) {
                statusText.textContent = "Esperando la primera foto...";
                loadingOverlay.classList.remove('hidden');
            } else {
                loadingOverlay.classList.add('hidden');
                
                if (isFirstLoad) {
                    currentIndex = 0;
                    startSlideshow();
                } else if (hasNewPhotos) {
                    // Saltar a la m치s reciente (칰ltima del array ordenado por fecha ascendente en Firestore, o primera si ordenamos descendente aqu칤)
                    // Aqu칤 sorted est치 descendente (b - a), as칤 que la nueva es la 0? No, Firestore guarda cronol칩gico.
                    // Ajuste: Firestore arrayUnion a침ade al final.
                    currentIndex = photos.length - 1; 
                    displayCurrentPhoto();
                    startSlideshow(); // Reiniciar timer
                }
            }
        }

        // --- CONEXI칍N ---
        const PHOTO_DOC_REF_PATH = ["artifacts", appId, "public", "data", "photos", "list"];

        onAuthStateChanged(auth, (user) => {
            if (!user) {
                signInAnonymously(auth).catch(e => {
                    console.error("Auth Error:", e);
                    statusText.textContent = "Error de autenticaci칩n.";
                });
            } else {
                statusText.textContent = "Conectando...";
                const docRef = doc(db, ...PHOTO_DOC_REF_PATH);
                
                onSnapshot(docRef, (docSnap) => {
                    if (docSnap.exists() && docSnap.data().items) {
                        updateUI(docSnap.data().items);
                    } else {
                        updateUI([]);
                    }
                }, (err) => {
                    console.error(err);
                    statusText.textContent = "Error de permisos. Revisa la consola.";
                });
            }
        });

        // --- Recepci칩n desde Apps Script ---
        window.handleAppsScriptData = async (event) => {
            if (!event.url) return;
            try {
                const docRef = doc(db, ...PHOTO_DOC_REF_PATH);
                const docSnap = await getDoc(docRef);
                const newEntry = { url: event.url, userId: 'Invitado', timestamp: Timestamp.now() };
                
                if (docSnap.exists()) {
                    await setDoc(docRef, { items: arrayUnion(newEntry) }, { merge: true });
                } else {
                    await setDoc(docRef, { items: [newEntry] });
                }
            } catch (e) { console.error("Error Firestore:", e); }
        };
    </script>
</body>
</html>
