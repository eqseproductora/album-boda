            letter-spacing: 6px;
            margin-top: 5px;
            text-transform: uppercase;
        }

        /* 츼rea Central de la Foto */
        #photo-wrapper {
            position: relative;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border-radius: 8px;
            background: #fafafa;
            /* Marco interno sutil para la foto */
            box-shadow: inset 0 0 30px rgba(193, 154, 107, 0.1);
            border: 1px solid var(--gold-light);
        }

        #current-photo {
            max-width: 98%;
