    <div id="projector-frame">
        <!-- Decoraci贸n Esquinas -->
        <div class="corner-decor tl"></div>
        <div class="corner-decor tr"></div>
        <div class="corner-decor bl"></div>
        <div class="corner-decor br"></div>

        <!-- Cabecera -->
        <div class="header">
            <h1 class="title">Nuestra Boda</h1>
            <div class="subtitle">Momentos en Vivo</div>
        </div>

        <!-- rea de Foto -->
        <div id="photo-wrapper">
            <div id="loading-overlay">
                <div class="spinner"></div>
                <p id="status-text" class="text-[#C19A6B] font-serif text-xl tracking-widest">Conectando...</p>
            </div>
            <img id="current-photo" src="" alt="Momento capturado">
        </div>

        <!-- Pie de Foto -->
        <div class="caption-bar">
            <div id="author-text"></div>
            <div id="message-text"></div>
        </div>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, onSnapshot, setDoc, arrayUnion, Timestamp, getDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // =========================================================================
        //  1. CONFIGURACIN DE FIREBASE (TUS DATOS ESTN AQU)
        // =========================================================================
        const firebaseConfig = {
            apiKey: "AIzaSyDUToiwZx4f6sI0DrYQt9kdNT-jlxlKeys",
            authDomain: "proyeccion-boda.firebaseapp.com",
            projectId: "proyeccion-boda",
            storageBucket: "proyeccion-boda.firebasestorage.app",
            messagingSenderId: "163164812654",
            appId: "1:163164812654:web:ffa2b0042f19f1fa0d7d7f"
        };
        // =========================================================================

        const appId = 'album-boda-fotos'; 
        // URL DE APPS SCRIPT (Para referencia)
        const APPS_SCRIPT_URL = "https://script.google.com/macros/s/AKfycbxogTHpV9J3tTxCb8MSnHPtA2UxgwaDXD6ysfx8jUrs7mJefergNiuZ1Hf6nofbX6U/exec";
        
        const SLIDESHOW_INTERVAL = 5000; // 5 Segundos por foto

        // Inicializaci贸n
        // Aseguramos que la app se inicialice antes de cualquier uso
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        // Elementos DOM
        const imgEl = document.getElementById('current-photo');
        const authorEl = document.getElementById('author-text');
        const messageEl = document.getElementById('message-text');
        const statusText = document.getElementById('status-text');
        const loadingOverlay = document.getElementById('loading-overlay');


        // Estado
        let photos = [];
        let currentIndex = 0;
        let slideTimer = null;

        // --- LGICA DE VISUALIZACIN ---

        function startSlideshow() {
            if (slideTimer) clearInterval(slideTimer);
            
            // Mostrar primera foto inmediatamente
            if (photos.length > 0) displayCurrentPhoto();

            slideTimer = setInterval(() => {
                if (photos.length > 0) {
                    currentIndex = (currentIndex + 1) % photos.length;
                    displayCurrentPhoto();
                }
            }, SLIDESHOW_INTERVAL);
        }

        function displayCurrentPhoto() {
            if (photos.length === 0) return;
            const photo = photos[currentIndex];
            
            // Fade Out
            imgEl.style.opacity = 0;
            imgEl.classList.remove('ken-burns');

            // Cambiar fuente tras breve pausa
            setTimeout(() => {
                imgEl.src = photo.url;
                
                // Textos
                const user = photo.userId && photo.userId !== 'AppsScript-User' && photo.userId !== 'Invitado' ? ` ${photo.userId}` : '';
                authorEl.textContent = user;
                messageEl.textContent = ""; // Mensaje opcional

                // Pre-carga y Fade In
                imgEl.onload = () => {
                    loadingOverlay.classList.add('hidden');
                    imgEl.style.opacity = 1;
                    imgEl.classList.add('ken-burns');
                };
            }, 800); 
        }

        function updatePhotosList(newPhotos) {
            // Ordenar: Nuevas primero
            const sorted = newPhotos.sort((a, b) => (b.timestamp?.toMillis() || 0) - (a.timestamp?.toMillis() || 0));
            
            const isFirstLoad = photos.length === 0 && sorted.length > 0;
            const hasNewPhotos = sorted.length > photos.length;

            photos = sorted;

            if (photos.length === 0) {
                statusText.textContent = "Esperando la primera foto...";
                loadingOverlay.classList.remove('hidden');
            } else {
                loadingOverlay.classList.add('hidden');
                
                if (isFirstLoad) {
                    currentIndex = 0;
                    startSlideshow();
                } else if (hasNewPhotos) {
                    // Si llega una foto nueva, mostrarla inmediatamente
                    currentIndex = 0; // Como ordenamos descendente, el 铆ndice 0 es la m谩s nueva
                    displayCurrentPhoto();
                    startSlideshow(); 
                }
            }
        }

        // --- CONEXIN A FIREBASE ---
        const PHOTO_DOC_REF_PATH = ["artifacts", appId, "public", "data", "photos", "list"];

        function initListener() {
            const docRef = doc(db, ...PHOTO_DOC_REF_PATH);
            
            onSnapshot(docRef, (docSnap) => {
                if (docSnap.exists()) {
                    const data = docSnap.data();
                    if (data.items && Array.isArray(data.items)) {
                        updatePhotosList(data.items);
                    }
                } else {
                    // Documento no existe a煤n
                    console.log("Esperando documento...");
                }
            }, (error) => {
                console.error("Error Firestore:", error);
                statusText.innerHTML = `ERROR DE PERMISOS.<br>Verifica las Reglas en la consola de Firebase.`;
                statusText.classList.add("text-red-600");
            });
        }

        // Autenticaci贸n An贸nima
        onAuthStateChanged(auth, (user) => {
            if (user) {
                initListener();
            } else {
                signInAnonymously(auth).catch(e => {
                    console.error(e);
                    statusText.textContent = "Error de autenticaci贸n.";
                });
            }
        });

        // --- RECEPCIN DESDE APPS SCRIPT (Para compatibilidad) ---
        window.handleAppsScriptData = async (event) => {
            if (!event.url) return;
            try {
                const docRef = doc(db, ...PHOTO_DOC_REF_PATH);
                const docSnap = await getDoc(docRef);
                const newEntry = { url: event.url, userId: 'Invitado', timestamp: Timestamp.now() };
                
                if (docSnap.exists()) {
                    await setDoc(docRef, { items: arrayUnion(newEntry) }, { merge: true });
                } else {
                    await setDoc(docRef, { items: [newEntry] });
                }
            } catch (e) { console.error("Error guardando foto externa:", e); }
        };
    </script>
</body>
