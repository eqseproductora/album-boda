        <div id="photo-wrapper">
            <div id="loading-overlay">
                <div class="spinner"></div>
                <p id="status-text" class="text-[#C19A6B] font-serif text-xl tracking-widest">Conectando...</p>
            </div>
            <img id="current-photo" src="" alt="Momento capturado">
        </div>

        <div class="caption-bar">
            <div id="author-text"></div>
            <div id="message-text"></div>
        </div>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, onSnapshot, setDoc, arrayUnion, Timestamp, getDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // --- TUS CREDENCIALES REALES YA INCRUSTADAS ---
        const firebaseConfig = {
            apiKey: "AIzaSyDUToiwZx4f6sI0DrYQt9kdNT-jlxlKeys",
            authDomain: "proyeccion-boda.firebaseapp.com",
            projectId: "proyeccion-boda",
            storageBucket: "proyeccion-boda.firebasestorage.app",
            messagingSenderId: "163164812654",
            appId: "1:163164812654:web:ffa2b0042f19f1fa0d7d7f"
        };

        const appId = 'album-boda-fotos'; 
        const SLIDESHOW_INTERVAL = 5000; 

        // Inicializaci贸n Inmediata
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        // Elementos DOM
        const imgEl = document.getElementById('current-photo');
        const authorEl = document.getElementById('author-text');
        const messageEl = document.getElementById('message-text');
        const statusText = document.getElementById('status-text');
        const loadingOverlay = document.getElementById('loading-overlay');

        let photos = [];
        let currentIndex = 0;
        let slideTimer = null;

        // L贸gica del Carrusel
        function startSlideshow() {
            if (slideTimer) clearInterval(slideTimer);
            if (photos.length > 0) {
                if(imgEl.style.opacity === '0' || imgEl.src === '') displayCurrentPhoto();
                slideTimer = setInterval(() => {
                    currentIndex = (currentIndex + 1) % photos.length;
                    displayCurrentPhoto();
                }, SLIDESHOW_INTERVAL);
            }
        }

        function displayCurrentPhoto() {
            if (photos.length === 0) return;
            const photo = photos[currentIndex];
            
            imgEl.style.opacity = 0;
            imgEl.classList.remove('ken-burns');

            setTimeout(() => {
                imgEl.src = photo.url;
                
                const user = photo.userId && photo.userId !== 'Invitado' ? ` ${photo.userId}` : '';
                authorEl.textContent = user;
                messageEl.textContent = ""; 

                imgEl.onload = () => {
                    loadingOverlay.classList.add('hidden');
                    imgEl.style.opacity = 1;
                    imgEl.classList.add('ken-burns');
                };
            }, 800); 
        }

        function updatePhotosList(newPhotos) {
            const sorted = newPhotos.sort((a, b) => (b.timestamp?.toMillis() || 0) - (a.timestamp?.toMillis() || 0));
            const isFirstLoad = photos.length === 0 && sorted.length > 0;
            const hasNewPhotos = sorted.length > photos.length;

            photos = sorted;

            if (photos.length === 0) {
                statusText.textContent = "Esperando fotos...";
                loadingOverlay.classList.remove('hidden');
            } else {
                if (isFirstLoad) {
                    currentIndex = 0;
                    startSlideshow();
                } else if (hasNewPhotos) {
                    currentIndex = 0;
                    displayCurrentPhoto();
                    startSlideshow(); 
                }
            }
        }

        // Conexi贸n a Firestore
        const PHOTO_DOC_REF_PATH = ["artifacts", appId, "public", "data", "photos", "list"];

        function initListener() {
            const docRef = doc(db, ...PHOTO_DOC_REF_PATH);
            onSnapshot(docRef, (docSnap) => {
                if (docSnap.exists() && docSnap.data().items) {
                    updatePhotosList(docSnap.data().items);
                } else {
                    console.log("Esperando documento...");
                }
            }, (error) => {
                console.error("Error Firestore:", error);
                statusText.textContent = "Error de Permisos (Revisa Firebase Rules)";
                statusText.classList.add('text-red-500');
            });
        }

        // Autenticaci贸n An贸nima
        onAuthStateChanged(auth, (user) => {
            if (user) {
                initListener();
            } else {
                signInAnonymously(auth).catch(e => {
                    console.error(e);
                    statusText.textContent = "Error Auth (Habilita An贸nimo en Firebase)";
                    statusText.classList.add('text-red-500');
                });
            }
        });
    </script>
