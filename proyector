    <div id="projector-frame">
        <!-- Esquinas Decorativas -->
        <div class="corner-decor tl"></div>
        <div class="corner-decor tr"></div>
        <div class="corner-decor bl"></div>
        <div class="corner-decor br"></div>

        <!-- Cabecera -->
        <div class="header">
            <h1 class="title">Nuestra Boda</h1>
            <div class="subtitle">츼lbum en Vivo</div>
        </div>

        <!-- 츼rea de la Foto -->
        <div id="photo-wrapper">
            <div id="loading-overlay">
                <div class="spinner"></div>
                <p id="status-text" class="text-[#C19A6B] font-serif text-2xl tracking-widest">Conectando...</p>
            </div>
            <img id="current-photo" src="" alt="Momento capturado">
        </div>

        <!-- Pie de Foto -->
        <div class="caption-bar">
            <div id="author-text"></div>
            <div id="message-text"></div>
        </div>
    </div>

    <script>
        // ==========================================
        // 丘뙖잺 CONFIGURACI칍N
        // ==========================================
        // Tu URL de Apps Script (La que termina en /exec)
        const APPS_SCRIPT_URL = "https://script.google.com/macros/s/AKfycbxogTHpV9J3tTxCb8MSnHPtA2UxgwaDXD6ysfx8jUrs7mJefergNiuZ1Hf6nofbX6U/exec";
        
        const SLIDE_DURATION = 5000; // 5 segundos por foto
        const REFRESH_INTERVAL = 15000; // Buscar fotos nuevas cada 15s
        // ==========================================

        let photos = [];
        let currentIndex = 0;
        let slideTimer;
        let isFirstLoad = true;

        const imgEl = document.getElementById('current-photo');
        const authorEl = document.getElementById('author-text');
        const messageEl = document.getElementById('message-text');
        const loadingOverlay = document.getElementById('loading-overlay');
        const statusText = document.getElementById('status-text');

        // --- 1. OBTENER FOTOS (Conexi칩n a Apps Script) ---
        async function fetchPhotos() {
            console.log("Buscando fotos nuevas...");
            try {
                // A침adimos un par치metro aleatorio para evitar cach칠 del navegador
                const response = await fetch(`${APPS_SCRIPT_URL}?action=get_photos&t=${Date.now()}`);
                
                if (!response.ok) throw new Error("Error de conexi칩n");
                
                const data = await response.json();
                
                if (data.status === 'success') {
                    const newPhotos = data.photos;
                    
                    // Si hay fotos nuevas o es la primera vez
                    if (isFirstLoad || newPhotos.length !== photos.length) {
                        console.log(`Actualizando: ${newPhotos.length} fotos encontradas.`);
                        photos = newPhotos;
                        
                        if (isFirstLoad && photos.length > 0) {
                            isFirstLoad = false;
                            loadingOverlay.classList.add('hidden');
                            startSlideshow();
                        } else if (photos.length === 0) {
                            statusText.textContent = "Esperando la primera foto...";
                            loadingOverlay.classList.remove('hidden');
                        }
                    }
                }
            } catch (error) {
                console.error(error);
                if(isFirstLoad) statusText.textContent = "Intentando reconectar...";
            }
        }

        // --- 2. MOSTRAR FOTO (L칩gica del Carrusel) ---
        function showPhoto(index) {
            if (photos.length === 0) return;

            const photo = photos[index];
            
            // Fade Out
            imgEl.style.opacity = 0;
            imgEl.classList.remove('ken-burns'); // Resetear zoom

            // Esperar que se desvanezca antes de cambiar la fuente (1s)
            setTimeout(() => {
                imgEl.src = photo.url;
                
                // Actualizar textos
                authorEl.textContent = photo.author ? `游닞 ${photo.author}` : "";
                messageEl.textContent = photo.message ? `"${photo.message}"` : "";

                // Pre-carga y Fade In
                imgEl.onload = () => {
                    imgEl.style.opacity = 1;
                    imgEl.classList.add('ken-burns'); // Aplicar zoom lento
                };
            }, 1000); 
        }

        function startSlideshow() {
            if (slideTimer) clearInterval(slideTimer);
            
            // Mostrar la primera inmediatamente
            showPhoto(currentIndex);

            // Ciclo infinito
            slideTimer = setInterval(() => {
                currentIndex = (currentIndex + 1) % photos.length;
                showPhoto(currentIndex);
            }, SLIDE_DURATION);
        }

        // --- INICIO ---
        window.onload = () => {
            fetchPhotos(); // Primera carga
            setInterval(fetchPhotos, REFRESH_INTERVAL); // Polling cada 15s
        };

    </script>
</body>
