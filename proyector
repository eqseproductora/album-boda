<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyector de Fotos - Boda</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Estilos (Mismos que antes) */
        body { background-color: #000; color: #fff; height: 100vh; display: flex; align-items: center; justify-content: center; overflow: hidden; font-family: sans-serif; }
        #current-photo { max-width: 100%; max-height: 100%; object-fit: contain; transition: opacity 1s; opacity: 0; }
        #message-text { position: absolute; bottom: 20px; font-size: 1.5rem; text-align: center; width: 100%; }
        .loader { border: 4px solid rgba(255,255,255,0.3); border-top: 4px solid #fff; border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite; margin: 0 auto 20px; }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    </style>
</head>
<body>

    <div id="app" class="w-full h-full relative">
        <img id="current-photo" src="" alt="Foto">
        
        <div id="loading-overlay" class="absolute inset-0 flex flex-col items-center justify-center bg-black z-10">
            <div class="loader"></div>
            <p id="status-text">Iniciando...</p>
        </div>
    </div>

    <!-- Firebase SDK (Módulos) -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, onSnapshot } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // =========================================================================
        //  1. CONFIGURACIÓN DE FIREBASE (¡PEGA TUS DATOS AQUÍ!)
        // =========================================================================
        // Borra todo lo que hay entre las llaves y pega tu configuración real.
        const firebaseConfig = {
            apiKey: "AIzaSyDUToiwZx4f6sI0DrYQt9kdNT-jlxlKeys",
            authDomain: "proyeccion-boda.firebaseapp.com",
            projectId: "proyeccion-boda",
            storageBucket: "16316481265",
            messagingSenderId: "NUMERO...",
            appId: "1:163164812654:web:ffa2b0042f19f1fa0d7d7f"
        };
        // =========================================================================

        const appId = 'album-boda-fotos'; 
        const SLIDESHOW_INTERVAL = 5000; 

        // Elementos DOM
        const statusText = document.getElementById('status-text');
        const loadingOverlay = document.getElementById('loading-overlay');
        const currentPhotoEl = document.getElementById('current-photo');

        // Inicialización
        let app, db, auth;

        try {
            // Verificación simple
            if (firebaseConfig.apiKey === "TU_API_KEY_AQUI") {
                throw new Error("Falta pegar la configuración de Firebase.");
            }
            
            app = initializeApp(firebaseConfig);
            db = getFirestore(app);
            auth = getAuth(app);
            statusText.textContent = "Conectando a Firebase...";

        } catch (e) {
            console.error(e);
            statusText.innerHTML = "ERROR DE CONFIGURACIÓN:<br>" + e.message;
            statusText.style.color = "red";
        }

        // Lógica del Proyector
        let photos = [];
        let currentIndex = 0;
        let slideTimer = null;

        function startSlideshow() {
            if (slideTimer) clearInterval(slideTimer);
            if (photos.length > 0) {
                displayPhoto();
                slideTimer = setInterval(() => {
                    currentIndex = (currentIndex + 1) % photos.length;
                    displayPhoto();
                }, SLIDESHOW_INTERVAL);
            }
        }

        function displayPhoto() {
            if (photos.length === 0) return;
            const url = photos[currentIndex].url;
            
            currentPhotoEl.style.opacity = 0;
            
            setTimeout(() => {
                currentPhotoEl.src = url;
                currentPhotoEl.onload = () => {
                    currentPhotoEl.style.opacity = 1;
                    loadingOverlay.classList.add('hidden');
                };
            }, 500);
        }

        // Conexión a Firestore
        if (auth) {
            onAuthStateChanged(auth, (user) => {
                if (user) {
                    const docRef = doc(db, "artifacts", appId, "public", "data", "photos", "list");
                    
                    onSnapshot(docRef, (snap) => {
                        if (snap.exists() && snap.data().items) {
                            // Ordenar por fecha (nuevas al final para detectar cambios, luego se pueden rotar)
                            // Para el slideshow: más recientes primero
                            photos = snap.data().items.sort((a, b) => (b.timestamp?.seconds || 0) - (a.timestamp?.seconds || 0));
                            
                            if (photos.length > 0) {
                                if (!slideTimer) startSlideshow(); 
                            } else {
                                statusText.textContent = "Esperando fotos...";
                                loadingOverlay.classList.remove('hidden');
                            }
                        } else {
                            statusText.textContent = "Esperando primera foto...";
                        }
                    }, (error) => {
                        console.error("Error Firestore:", error);
                        statusText.textContent = "Error de Permisos (Revisa la consola).";
                    });

                } else {
                    signInAnonymously(auth).catch(e => console.error("Error Auth:", e));
                }
            });
        }
    </script>
</body>
</html>
